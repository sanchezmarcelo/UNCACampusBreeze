<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/insertHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/fresca"
        android:text="@string/insert_heading"
        android:textSize="18sp"
        android:hint="@string/insert_heading"
        />

    <EditText
        android:id="@+id/insertText"
        android:layout_width="400dp"
        android:layout_height="68dp"
        android:layout_below="@+id/insertHeading"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/fresca"
        android:hint="@string/insert_text"
        android:text="@string/insert_text" />

</RelativeLayout>