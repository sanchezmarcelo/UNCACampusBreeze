<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/newPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="121dp"
        android:fontFamily="@font/fresca"
        android:text="New Posts" />

    <Button
        android:id="@+id/allPosts"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="118dp"
        android:layout_toRightOf="@id/newPosts"
        android:fontFamily="@font/fresca"
        android:text="All" />

    <SearchView
        android:id="@+id/search"
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPosts"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/postHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/fresca"
        android:text="Heading"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/postText"
        android:layout_width="400dp"
        android:layout_height="68dp"
        android:layout_below="@+id/postHeading"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/fresca"
        android:text="Post Text" />

</RelativeLayout>